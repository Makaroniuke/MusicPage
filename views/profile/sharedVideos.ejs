<% layout('layouts/boilerplate') %>
<%- include('../partials/navbar') %>

<style>
  .popup {
      position: fixed;
      z-index: 1;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      overflow: auto;
      background-color: rgba(0, 0, 0, 0.4);
      display: none;
  }
  .popup-content {
      background-color: white;
      margin: 10% auto;
      padding: 20px;
      border: 1px solid #888888;
      width: 30%;
      font-weight: bolder;
  }
  .popup-content button {
      display: block;
      margin: 0 auto;
  }
  .show {
      display: block;
  }
  h1 {
      color: green;
  }
</style>
<div class="container">
    <div style="display: flex; flex-direction:column; justify-content:center; align-items: center; margin-top:30px ">
        <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png" alt="" style="border-radius: 50%; height: 200px; width:200px;">
        <h4>Usernameeeeeeeeeeeeeeeee</h4>
        <h6>@username</h6>
        <p>IG: blabla</p>
        <hr style="width:100%;margin-top:20px;">
    </div>

    <a style=" float:right" href="/profile/addTrack" id="articleSubmit">New Post</a>

    <div class="sample">

  
            <% for (let i = 0; i < videos.length; i++){ %>
              
            <div style="margin-bottom: 50px; border: 1px solid #e6e6e6; border-radius:5px; padding: 20px 20px 20px 20px">
                <div style="display:flex">
                    <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png" alt="" style="border-radius: 50%; height: 50px; width:50px;">
                    <p>@username  <sub style="padding-left: 20px;"><%= videos[i].date.toLocaleDateString() %></sub></p>
                    <a style=" float:right; margin-left: auto;" href="/profile/<%= videos[i]._id %>/editTrack" id="articleSubmit">Edit Post</a>
                    <form class='d-inline' method="POST" action="/profile/<%= videos[i]._id %>?_method=DELETE ">
                        <button>
                          Delete Post
                        </button>
                    </form>
                </div>

                <p style="margin: 0 40px 0 40px;"> <%= videos[i].description %></p>
                
                <iframe width="1045" height="450" src="<%= videos[i].url %>" title="Sound Rush x The Purge x Adjuzt - Adrenaline Overload (Official Video)" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
                
            </div>
            <hr style="width:100%; background: #478ac9; height: 1px; margin-top:20px;">
            <% } %>
            <iframe width="1045" height="450" src="https://www.youtube.com/embed/smvcyN1KPQc?list=RDsmvcyN1KPQc"  frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
       

      </div>

      
</div>


  